{% extends 'admin.html.twig' %}

{% block title %}OpenGaia | Administration{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.onload = function(){
            ClassicEditor
                .create(document.querySelector('#product_description'), {
                    toolbar: [ 'heading','bold', 'italic', 'bulletedList', 'numberedList', 'blockQuote' ],
                    height: 50
                })
                .catch(error => {
                    console.error(error);
                });
        }
    </script>
{%  endblock %}

{% block content %}
<div class="container-fluid">
    {{ include('Gestapp/recommandation/include/_section_content_header.html.twig') }}
    <section id="op_admin_content_body">
        <div class="row g-2">
            <div class="col-2">
                {{ include('Gestapp/recommandation/include/_section_content_aside.html.twig') }}
            </div>
            <div class="col-10">
                <div class="card">
                    <div class="card-header">
                        <h3>Ajouter une recommandation</h3>
                    </div>
                    {{ include('Gestapp/recommandation/_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
