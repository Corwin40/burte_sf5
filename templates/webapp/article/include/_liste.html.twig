<div class="table-responsive">
    <table class="table align-middle">
    <thead>
    <tr>
        <th>Id</th>
        <th>titre</th>
        <th>Description</th>
        <th>Catégorie</th>
        <th>Création</th>
        <th>Modification</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td><strong>{{ article.title }}</strong><br><small>{{ article.slug }}</small></td>
            <td>{{ article.description }}</td>
            <td>{{ article.category }}</td>
            <td>{{ article.createdAt ? article.createdAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
            <td>{{ article.updatedAt ? article.updatedAt|format_datetime('medium', 'none', locale='fr') : '' }}</td>
            <td>
                <a href="{{ path('op_webapp_article_edit', {'id': article.id}) }}"><i class="far fa-edit"></i></a>
                <a href="#" class="js-modalSuppr text-danger" type="button" data-bs-toggle="modal" data-bs-target="#Suppr" data-bs-whatever="{{ article.id }}">
                    <i class="bi bi-eraser text-danger"></i>
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>