{{ form_start(form) }}
<div class="card-body">
    <div class="row">

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <button class="nav-link active" aria-current="page" data-bs-toggle="tab" data-bs-target="#Informations" type="button" role="tab" aria-controls="Informations" aria-selected="true"><h5>Informations</h5></button>
            </li>
            <li class="nav-item">
                <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Contenu" type="button" role="tab" aria-controls="Options" aria-selected="true"><h5>Contenu</h5></button>
            </li>
            <li class="nav-item">
                <button class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Adaptation" type="button" role="tab" aria-controls="SEO" aria-selected="true"><h5>Adaptation au template</h5></button>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="Informations" role="tabpanel" aria-labelledby="information-tab">
                <div class="row">
                    <div class="col-4">
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.title, 'Title', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'titre de la page'}}) }}
                            </div>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.description, 'Description', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'description'}}) }}
                            </div>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.page, 'Page', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.page, {'attr': {'class': 'form-select form-select-sm'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row mb-1 mt-1 g-1">
                            <fieldset>
                                <div class="form-check form-switch">
                                    {{ form_widget(form.favorites, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.favorites, "Placer cette section aussi en page d'accueil", {'label_attr': {'class':'form-check-label'}}) }}
                                </div>
                            </fieldset>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-10">
                                <b>{{ form_label(form.position, 'Position', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-2">
                                {{ form_widget(form.position, {'attr': {'class': 'form-control form-select-sm'}}) }}
                            </div>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <fieldset>
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isShowtitle, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.isShowtitle, 'Afficher le titre', {'label_attr': {'class':'form-check-label'}}) }}
                                </div>
                            </fieldset>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <fieldset>
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isShowdescription, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.isShowdescription, 'Afficher la description', {'label_attr': {'class':'form-check-label'}}) }}
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Contenu" role="tabpanel" aria-labelledby="contenu-tab">
                <div class="row" id="contentType">
                    <div class="col-4">
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.contentType, 'Content type', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.contentType, {'attr': {'class': 'form-select form-select-sm'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="One_article" style="display: none">
                    <div class="col-4">
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.oneArticle, "Choisir l'article", {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.oneArticle, {'attr': {'class': 'form-select form-select-sm js-change'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="One_Nat_Product" style="display: none">
                    <div class="col-4">
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.oneNatproduct, "Choisir la nature de produit", {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.oneNatproduct, {'attr': {'class': 'form-select form-select-sm js-change'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="One_Cat_Product" style="display: none">
                    <div class="col-4">
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.oneCatproduct, "Choisir la catégorie", {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.oneCatproduct, {'attr': {'class': 'form-select form-select-sm js-change'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="Adaptation" role="tabpanel" aria-labelledby="adaptation-tab">
                <div class="row">
                    <div class="col-4">
                        <h5 class="mt-3">Ajouter des balises à la section</h5>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.attrId, 'Attr Id', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.attrId, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'titre de la page'}}) }}
                            </div>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.attrName, 'Attr name', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.attrName, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'titre de la page'}}) }}
                            </div>
                        </div>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="col-3">
                                <b>{{ form_label(form.attrClass, 'Attr class', {'label_attr': {'class':'form-label'}}) }}</b>
                            </div>
                            <div class="col-9">
                                {{ form_widget(form.attrClass, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'titre de la page'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <h5 class="mt-3">Rendre la section adaptée en largeur à l'écran.</h5>
                        <div class="row mb-1 mt-1 g-1">
                            <fieldset>
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isSectionFluid, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.isSectionFluid, 'Oui, la section prendra toute la largeur.', {'label_attr': {'class':'form-check-label'}}) }}
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-4">
                        <h5 class="mt-3">Ajouter une image en fond</h5>
                        <div class="row mb-1 mt-1 g-1">
                            <div class="row mb-1 mt-1 g-1">
                                <div class="col-12">
                                    {{ form_widget(form.cssBackgroundImageFile, {'attr': {'class': 'form-control-file form-control-sm'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-footer">
    <a class="btn btn-secondary btn-sm" href="{{ path('op_webapp_page_show', {'id':idpage}) }}"><i class="fas fa-angle-double-left"></i> Retour à la liste</a> <button class="btn btn-sm btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
